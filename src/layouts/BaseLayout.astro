---
interface Props {
    title: string
}
const { title } = Astro.props
const baseUrl = Astro.url
---

<!doctype html>
<html lang="id">
	<head>
    <!-- HTML Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A clean and fast Astro SaaS Starter template" />
    <meta name="keywords" content="astro,website,template,saas,boilerplate,marketing,landing page,blog" />
    <meta name="dcterms.subject" content="astro,website,template,saas,boilerplate,marketing,landing page,blog" />
    <meta name="theme-color" content="#0c0a09"/>

    <!-- Open Graph -->
    <meta property="og:description" content="A clean and fast Astro SaaS Starter template">
    <meta property="og:image" content="/og-image.png">
    <meta property="og:locale" content="id_ID">
    <meta property="og:site_name" content={title}>
    <meta property="og:title" content={title}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={baseUrl}>

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@riipandi">
    <meta name="twitter:description" content="A clean and fast Astro SaaS Starter template">
    <meta name="twitter:image" content="/og-image.png">
    <meta name="twitter:title" content={title}>
    <meta property="twitter:domain" content="example.com">
    <meta property="twitter:url" content={baseUrl}>

    <!-- Favicon and Manifest -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="apple-touch-icon" sizes="256x256" href="/favicon.png">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="canonical" href={baseUrl}>

    <!-- RSS Feed & Sitemap -->
    <link type="application/atom+xml" rel="alternate" href="/feed.xml" title={title}>
    <link rel="sitemap" href="/sitemap-index.xml" />

		<title>{title}</title>
    <!-- <script is:inline defer src='/script.js'></script> -->
	</head>
	<body>
        <a href="#main" class="skiplink">Skip to main content</a>
		<slot />
	</bodyd>
</html>

<style is:global>
    @font-face {
        font-family: 'Inter Variable';
        font-style: normal;
        font-display: swap;
        font-weight: 200 800;
        src: url(https://cdn.jsdelivr.net/fontsource/fonts/inter:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
        unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0300-0301,U+0303-0304,U+0308-0309,U+0323,U+0329,U+2000-206F,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
    }
    @font-face {
        font-family: 'JetBrains Mono Variable';
        font-style: normal;
        font-display: swap;
        font-weight: 100 800;
        src: url(https://cdn.jsdelivr.net/fontsource/fonts/jetbrains-mono:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
        unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
    }
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
    html,
    body {
        @apply size-full min-h-screen antialiased scroll-smooth bg-gray-800;
    }
    .skiplink {
        @apply h-px overflow-hidden absolute w-px focus:rounded-lg focus:text-gray-900 focus:h-auto focus:w-auto focus:no-underline focus:m-1 focus:px-4 focus:py-2;
        clip: rect(1px, 1px, 1px, 1px);
    }
    .skiplink:focus {
        clip: auto;
    }
    .skiplink:focus,
    .skiplink:active {
        border: none;
        outline: none;
    }
    .debug {
        border-width: 1px;
        border-style: dashed;
        border-color: #f87171;
    }
</style>

<!-- Style for article -->
<style is:global>
  .prose {
    --tw-prose-invert-headings: theme(colors.gray.100);
    --tw-prose-invert-body: theme(colors.gray.300);
    --tw-prose-invert-bold: theme(colors.gray.200);
    --tw-prose-invert-links: theme(colors.blue.400);
    --tw-prose-invert-code: theme(colors.gray.200);
    line-height: 1.75;
  }

  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    margin-top: 1.75em;
    margin-bottom: 0.75em;
    font-weight: 600;
  }

  .prose :where(h3):not(:where([class~="not-prose"] *)) {
    margin-top: 1.5em;
    margin-bottom: 0.75em;
    font-weight: 600;
  }

  .prose :where(h4):not(:where([class~="not-prose"] *)) {
    margin-top: 1.5em;
    margin-bottom: 0.75em;
    font-weight: 600;
  }

  .prose :where(p, ul, ol):not(:where([class~="not-prose"] *)) {
    margin-top: 1em;
    margin-bottom: 1em;
  }

  .prose :where(ul, ol):not(:where([class~="not-prose"] *)) {
    list-style-type: disc;
    padding-left: 1.25em;
  }

  .prose :where(ul, ol):not(:where([class~="not-prose"] *)) p {
    margin: 0.15em;
    padding: 0.15em;
  }

  .prose :where(ol):not(:where([class~="not-prose"] *)) {
    list-style-type: decimal;
  }

  .prose :where(li):not(:where([class~="not-prose"] *)) {
    margin: 0;
    padding-left: 0.375em;
  }

  .prose :where(pre):not(:where([class~="not-prose"] *)) {
    background-color: theme(colors.gray.900);
    border: 1px solid theme(colors.gray.800);
    border-radius: theme(borderRadius.lg);
    margin: 1em 0;
    padding: 1em;
  }

  .prose :where(code):not(:where([class~="not-prose"] *)) {
    padding: 0.2em 0.4em;
    border-radius: 4px;
    background-color: theme(colors.gray.800);
  }

  .prose :where(blockquote):not(:where([class~="not-prose"] *)) {
    border-left: 4px solid theme(colors.gray.700);
    padding-left: 1em;
    margin: 1em 0;
    font-style: italic;
  }
</style>
