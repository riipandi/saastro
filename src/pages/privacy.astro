---
import * as Lucide from 'lucide-astro'
import Layout from '../layouts/BaseLayout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
---

<Layout title="Privacy Policy - Saastro">
  <Header />
  <main class="relative bg-black">
    <div class="pt-32 pb-12 flex flex-col px-4 mx-auto max-w-[1344px] sm:px-6 lg:px-8">
      <div class="flex gap-8">
        <!-- Main content -->
        <div class="w-full min-w-0 container">
          <!-- <article class="pt-4 prose prose-base prose-invert min-w-full" set:html={privacyPolicy.compiledContent()} /> -->
          <!-- Do something with the content -->
        </div>

        <!-- Right sidebar -->
        <div class="hidden xl:block w-80 shrink-0 p-4">
          <div class="sticky top-28">
            <!-- Table of Contents -->
            <div class="mb-8">
              <h4 class="mb-4 text-sm font-semibold text-gray-400">On this page</h4>
              <nav class="space-y-2.5">
                <a href="#terms" class="block text-sm text-gray-400 hover:text-brand-400">Terms of Use</a>
                <a href="#license" class="block text-sm text-gray-400 hover:text-brand-400">License Agreement</a>
                <a href="#restrictions" class="block text-sm text-gray-400 hover:text-brand-400">Restrictions</a>
              </nav>
            </div>

            <!-- External Links -->
            <div>
              <h4 class="mb-4 text-sm font-semibold text-gray-400">External Links</h4>
              <nav class="space-y-2.5">
                <a href="/docs" class="flex items-center gap-2 text-sm text-gray-400 hover:text-brand-400">
                  <Lucide.FileText class="size-4" />
                  <span>Documentation</span>
                </a>
                <a href="/github" class="flex items-center gap-2 text-sm text-gray-400 hover:text-brand-400">
                  <Lucide.Github class="size-4" />
                  <span>GitHub</span>
                </a>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
