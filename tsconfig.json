{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": ["vite/client"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [".astro/types.d.ts", "./src/**/*"],
    "exclude": ["node_modules", "dist", "public"]
}
